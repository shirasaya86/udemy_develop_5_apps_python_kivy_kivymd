#: import utils kivy.utils

ScreenManager:
    HomeScreen:
        id:home
        name:"home"

<HomeScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("#66FF99")
            Rectangle:
                pos:self.pos
                size:self.size

        Image:
            source:"male.gif"
            size_hint: 0.5,.1
            pos_hint: {"top":1, "left":1}

        Image:
            source:"female.gif"
            size_hint: 0.5,.1
            pos_hint: {"top":1, "right":1}

        Label:
            pos_hint: {"top":0.85}
            size_hint: 1.0,0.1
            text:'Choose Your height'
            font_size: 30
            color:1,0,1,1
        MDSlider:
            id: height_value
            # text:'text'
            min:90
            max:220
            value:150
            orientation: "horizontal"
            size_hint: 1.,.1
            pos_hint: {"top":0.75}
            on_touch_up:
                root.getvalue()
            MDSliderHandle:

            MDSliderValueLabel:

        Label:
            pos_hint: {"top":0.65}
            size_hint: 1.0,0.1
            text:'Choose Your weight'
            font_size: 30
            color:1,0,1,1
        
        MDCard:          
            size: "280dp","79dp"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y":.5}

            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .5, "center_y": .5}
                user_font_size: "48sp"
                on_release:
                    root.decrease()

            Label:
                text:str(root.weight) + " kg"
                font_size: 40
                color: 0,0,0,1

            MDIconButton:
                icon: "plus"
                user_font_size: "24sp"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.increase()

        Button:
            md_bg_color: 1,0,1,1
            size_hint: .8,.07
            pos_hint: {"top":.2, "center_x":.5}
            text: 'Calculate BMI'
            on_release:
                root.calculate_bmi()

